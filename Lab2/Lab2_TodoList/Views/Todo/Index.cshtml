@model List<Lab2_TodoList.Models.TaskItem>

<h1>Todo List</h1>
<a class="btn btn-primary" href="/Todo/Create">Add Task</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Task</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].TaskName</td>
                <td>
                    <a class="btn btn-warning" href="/Todo/Edit/@Model[i].Id">Edit</a>
                    <a class="btn btn-danger" href="/Todo/Delete/@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
