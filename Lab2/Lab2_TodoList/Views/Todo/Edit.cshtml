@model Lab2_TodoList.Models.TaskItem

<h1>Edit Task</h1>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label>Task Name</label>
        <input type="text" class="form-control" name="TaskName" value="@Model.TaskName" required />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
